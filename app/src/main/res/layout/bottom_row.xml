<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  >

  <ImageView
    android:id="@+id/imgTopLeft"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/item_background"
    android:padding="8dp"
    android:src="@drawable/ic_toys"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/imgTopMiddle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="ContentDescription"
    />

  <ImageView
    android:id="@+id/imgTopMiddle"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/item_background"
    android:padding="8dp"
    android:src="@drawable/ic_love"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/imgTopRight"
    app:layout_constraintStart_toEndOf="@+id/imgTopLeft"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="ContentDescription"
    />

  <ImageView
    android:id="@+id/imgTopRight"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/item_background"
    android:padding="8dp"
    android:src="@drawable/ic_pets"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/imgTopMiddle"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="ContentDescription"
    />

</androidx.constraintlayout.widget.ConstraintLayout>